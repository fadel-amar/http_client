{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>Liste de tous les posts</h1>


        {% for post in posts %}
            <ul>
                <li>{{ post.contenu }} </li>
                <li>{{ post.titre }} </li>
          {#      <li>{{ post.categorie }} </li>
                <li>{{ post.user }} </li>#}
            </ul>

        {% endfor %}


    </div>
{% endblock %}
