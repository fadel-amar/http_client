{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">



        <h1 style="margin-bottom: 50px">Voici la liste des posts</h1>
        {% for post in posts %}
            <div>
                <h2>Titre : {{ post.titre }}</h2>
                <div>Cat√©gorie : {{ post.categorie}}</div>
                <div>Id : {{ post.id }}</div>
                <div>Contenu : {{ post.contenu }}</div>
                <div>Email : {{ post.user }}</div>
            </div>
            <br>
        {% endfor %}



    </div>
{% endblock %}
